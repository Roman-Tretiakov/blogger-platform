{
  "name": "blogger-platform-backend",
  "version": "1.0.0",
  "description": "1 sprint",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy:docs",
    "copy:docs": "copyfiles -u 1 \"src/**/docs/**/*.yml\" dist/",
    "watch": "tsc -w",
    "dev": "nodemon --inspect dist/index.js",
    "test": "jest -i",
    "test:blogs": "jest __tests__/e2e_blogs/blogs.e2e.test.ts",
    "test:posts": "jest __tests__/e2e_posts/posts.e2e.test.ts",
    "test:users": "jest __tests__/e2e_users/users.e2e.tests.ts",
    "test:auth": "jest __tests__/e2e_auth/auth.e2e.tests.ts",
    "lint": "eslint --fix .",
    "format": "prettier --write .",

    "pm2:start:watch": "pm2 delete blogger-backend || pm2 start dist/index.js --name \"blogger-backend\" --watch",
    "pm2:logs": "pm2 logs blogger-backend",
    "pm2:stop": "pm2 stop blogger-backend",
    "pm2:restart": "pm2 restart blogger-backend",
    "pm2:delete": "pm2 delete blogger-backend",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit",
    "dev:prod": "pnpm run build && pnpm run pm2:start && pnpm run pm2:logs"
  },
  "keywords": [],
  "author": "RomanT",
  "license": "ISC",
  "packageManager": "pnpm@10.27.0",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-validator": "^7.3.1",
    "mongodb": "^7.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "4.6.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
